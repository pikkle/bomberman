<AnchorPane fx:id="mainPane" prefHeight="215.0" prefWidth="438.0" xmlns="http://javafx.com/javafx/8.0.60" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ch.heigvd.bomberman.client.views.room.PasswordController">
    <children>
