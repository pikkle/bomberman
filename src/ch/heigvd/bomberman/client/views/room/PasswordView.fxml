                    <columnConstraints>
                        <ColumnConstraints hgrow="SOMETIMES" maxWidth="163.0" minWidth="10.0" prefWidth="90.0" />
                        <ColumnConstraints hgrow="SOMETIMES" maxWidth="245.0" minWidth="10.0" prefWidth="245.0" />
                    </columnConstraints>
                    <rowConstraints>
                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                    </rowConstraints>
                    <children>
                        <Label text="Password:" />
                        <PasswordField fx:id="pwd" GridPane.columnIndex="1" />
                    </children>
                </GridPane>
                <ButtonBar prefHeight="34.0" prefWidth="335.0">
                    <buttons>
                        <Button mnemonicParsing="false" onAction="#join" text="Login" />
                        <Button mnemonicParsing="false" onAction="#close" text="Cancel" />
                    </buttons>
                </ButtonBar>
            </children>
            <opaqueInsets>
                <Insets left="15.0" right="15.0" />
            </opaqueInsets>
        </VBox>
    </children>
